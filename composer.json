{
	"name": "enpii/enpii-base",
	"description": "The Base plugin for Theme and Plugin development. It requires ACF pro to work.",
	"type": "wordpress-muplugin",
	"authors": [
		{
			"name": "Trac Nguyen",
			"email": "npbtrac@yahoo.com"
		},
		{
			"name": "Enpii",
			"email": "contact@enpii.com"
		}
	],
  "minimum-stability": "dev",
  "prefer-stable": true,
  "repositories": [
    {
      "type": "composer",
      "url": "https://asset-packagist.org"
    }
  ],
	"require": {
    "oomphinc/composer-installers-extender": "^1.1",
    "yiisoft/yii2": "~2.0.14",
    "yiisoft/yii2-bootstrap4" : "^2.0.8",
		"yiisoft/yii2-swiftmailer": "~2.0.0 || ~2.1.0",
		"symfony/var-dumper": "~5.0.8",
    "php": ">=7.2.0"
	},
	"require-dev": {
		"squizlabs/php_codesniffer": "~3.5.1",
		"mockery/mockery": "~1.3.1",
		"ezyang/htmlpurifier": "~4.6",
		"yiisoft/yii2-debug": "~2.1.0",
		"yiisoft/yii2-gii": "~2.1.0",
		"yiisoft/yii2-faker": "~2.0.0",
		"codeception/codeception": "^4.0",
		"codeception/verify": "~0.5.0 || ~1.1.0",
		"codeception/specify": "~0.4.6",
		"symfony/browser-kit": ">=2.7 <=4.2.4",
		"codeception/module-filesystem": "^1.0.0",
		"codeception/module-yii2": "^1.0.0",
		"codeception/module-asserts": "^1.0.0"
	},
	"replace": {
    "npm-asset/bootstrap": ">=4.3.0",
    "bower-asset/bootstrap": ">=4.3.0"
	},
  "config": {
    "fxp-asset": {
      "process-timeout": 1800,
      "enabled": false
    }
  },
  "scripts": {
    "post-install-cmd": [
      "yii\\composer\\Installer::postInstall"
    ],
    "post-create-project-cmd": [
      "yii\\composer\\Installer::postCreateProject",
      "yii\\composer\\Installer::postInstall"
    ]
  },
  "extra": {
    "installer-types": ["bower-asset", "npm-asset"],
    "installer-paths": {
      "vendor/{$vendor}/{$name}/": ["type:bower-asset", "type:npm-asset"]
    },
    "yii\\composer\\Installer::postCreateProject": {
      "setPermission": [
        {
          "runtime": "0777",
          "yii": "0755"
        }
      ]
    },
    "yii\\composer\\Installer::postInstall": {
      "generateCookieValidationKey": [
        "config/wp-app.php"
      ]
    }
  },
	"autoload": {
		"psr-4": {
			"Enpii\\Wp\\EnpiiBase\\": "src",
			"Enpii\\Wp\\EnpiiBase\\App\\": "src/app",
			"Enpii\\Wp\\EnpiiBase\\Libs\\": "src/libs",
			"Enpii\\Wp\\EnpiiBase\\Libs\\Traits\\": "src/libs/traits",
			"Enpii\\Wp\\EnpiiBase\\Helpers\\": "src/helpers",
			"Enpii\\Wp\\EnpiiBase\\Helpers\\Interfaces\\": "src/helpers/interfaces",
			"Enpii\\Wp\\EnpiiBase\\Helpers\\Traits\\": "src/helpers/traits",
			"Enpii\\Wp\\EnpiiBase\\Services\\": "src/services",
			"Enpii\\Wp\\EnpiiBase\\Base\\": "src/base",
			"Enpii\\Wp\\EnpiiBase\\Helper\\": "src/helper",
			"Enpii\\Wp\\EnpiiBase\\Component\\": "src/component"
		}
	}
}
